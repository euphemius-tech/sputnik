<h2 style="text-align: center;">Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <% if resource.errors.any? %>
    <div class="error-messages">
      <h4><%= pluralize(resource.errors.count, "error") %> prohibited this visitor from being saved:</h4>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-container">
    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<div class="form-links" style="text-align: center;">
  <%= render "devise/shared/links" %>
</div>
